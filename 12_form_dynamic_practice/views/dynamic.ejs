<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=
    , initial-scale=1.0"
    />

    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <style>
      body {
        background-color: bisque;
      }

      .result {
        font-weight: 700;
        font-size: 24px;
      }

      .success {
        color: blue;
        font-weight: 700;
      }

      .error {
        color: red;
        font-weight: 700;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <h1><%= title %></h1>

    <hr />
    <h2>실습29. axios get 회원가입</h2>
    <form name="register">
      <label for="username">이름</label>
      <input type="text" name="username" id="username" />
      <br />

      <fieldset>
        <legend>성별</legend>
        <input type="radio" name="gender" id="male" value="male" checked />
        <label for="male">남자</label>
        <input type="radio" name="gender" id="female" value="female" />
        <label for="female">여자</label>
      </fieldset>
      <br />

      <fieldset>
        <legend>생년월일</legend>
        <select name="birthYear" id="year">
          <% for (let i = 0; i < 50; i++) { %>
          <option value="<%= 2010 - i %>"><%= 2010 - i %></option>
          <% } %>
        </select>
        <label for="year">년</label>
        <select name="birthMonth" id="month">
          <% for (let i = 1; i < 13; i++) { %>
          <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
        <label for="month">월</label>
        <select name="birthDay" id="day">
          <% for (let i = 1; i < 31; i++) { %>
          <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
        <label for="day">일</label>
      </fieldset>
      <br />

      <fieldset>
        <legend>관심사</legend>
        <input
          type="checkbox"
          name="hobby"
          id="travle"
          value="travle"
          checked
        />
        <label for="travle">여행</label>
        <input type="checkbox" name="hobby" id="fashion" value="fashion" />
        <label for="fashion">패션</label>
        <input type="checkbox" name="hobby" id="food" value="food" />
        <label for="food">음식</label>
      </fieldset>
      <br />

      <button type="button" onclick="clickRegister();">회원가입</button>
    </form>
    <div class="register-result"></div>

    <hr />
    <h2>실습30. axios post 로그인</h2>
    <form name="login">
      <label for="userId">아이디</label>
      <input type="text" id="userId" name="userId" /><br />
      <label for="userPw">패스워드</label>
      <input type="password" id="userPw" name="userPw" /><br />
      <button type="button" onclick="clickLogin();">로그인</button>
    </form>
    <div class="login-result"></div>

    <script>
      const registerResult = document.querySelector('.register-result');
      const loginResult = document.querySelector('.login-result');

      function clickRegister() {
        console.log('clickregister');

        // 폼 선택하기
        const form = document.forms['register'];
        const data = {
          username: form.username.value,
        };

        axios({
          method: 'GET',
          url: '/practice29',
          params: data,
        }).then(function (res) {
          // res: response 서버로부터 받은 응답
          console.log(res);
          console.log(res.data); // { username: 'aa' }
          registerResult.textContent = `${res.data.username}님 환영합니다! 가입 완료🎉`;
          registerResult.classList.add('success');
        });
      }

      function clickLogin() {
        console.log('clicklogin');

        // 폼 선택하기
        const form = document.forms['login'];
        const data = {
          userId: form.userId.value,
          userPw: form.userPw.value,
        };

        axios({
          method: 'POST',
          url: '/practice30',
          data: data,
        }).then(function (res) {
          console.log(res);
          console.log(res.data);
          // res.data
          // 로그인 성공; { userInfo: {userId: ??, userPw: ??}, isLogin: true }
          // 로그인 실패; { isLogin: false }

          if (res.data.isLogin === true) {
            // 로그인 성공
            loginResult.textContent = `${res.data.userInfo.userId}님 환영합니다! 로그인 성공🎉`;
            loginResult.classList.remove('error');
            loginResult.classList.add('success');
          } else {
            // 로그인 실패
            loginResult.textContent = '아이디 또는 패스워드 오류😂';
            loginResult.classList.remove('success');
            loginResult.classList.add('error');
          }
        });
      }
    </script>
  </body>
</html>
